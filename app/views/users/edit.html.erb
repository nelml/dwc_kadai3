<%= render "books/afheader" %>
<main>
  <div class="container">
    <%= render 'error' %>
    <h2>User info</h2>
    <%= form_for(@user) do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :profile_image, "image" %><br />
        <%= f.attachment_field :profile_image %>
      </div>

      <div class="field">
        <%= f.label :introduction %><br />
        <%= f.text_area :introduction %>
      </div>

      <div class="actions">
      	<%= f.submit "Update User" %>
      </div>
    <% end %>

    <%= link_to 'logout', destroy_user_session_path, method: :delete %>
    <a href="/">Top</a>
</main>
<%= render "books/footer" %>