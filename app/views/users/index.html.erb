<%= render 'books/afheader' %>
<main>
	<div class="container">
		<p id="notice"></p>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :image, :fill, 100, 100, format: "jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= current_user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<%= link_to edit_user_path(current_user.id) do %>
						<button class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="users/:id/edit"></button>
					<% end %>
				</div>
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
					<div class="field row">
						<div><%= f.label :title %></div>
						<div><%= f.text_field :title, class: "col-xs-12"%></div>
					</div>
					<div class="field row">
						<div><%= f.label "Opinion" %></div>
						<div><%= f.text_area :body, class: "col-xs-12" %></div>
					</div>
					<div class="field row">
						<%= f.submit "Create Book", class: "col-xs-12 btn btn-primary"%>
					</div>
				<% end %>
			</div>
			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%=attachment_image_tag @user, :image, :fill, 40, 40, format: "jpg" %></td>
							<td><%= user.name %></td>
							<td><%= link_to 'Show', users_path %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</main>
<%= render "books/footer" %>